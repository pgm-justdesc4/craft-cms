{% extends "layouts/base.twig" %}

{% block body %}
        {% set siteSettings = craft.app.getGlobals().getSetByHandle('siteSettings') %}
            {% if siteSettings and siteSettings.heroImage.one() %}
                <figure class="hero">
                    <img src="{{ siteSettings.heroImage.one().url }}" alt="Website Logo">
                </figure>
            {% endif %}
{% endblock %}